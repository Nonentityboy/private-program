/*底部菜单*/
.picker-bottom{
  font-size:30rpx;
  color:#ffffff;
  display:flex;
  flex-direction:column;    
  background-color:#0066ff;
  align-items:center;
  justify-content:center;
  width:100%;
  height:7vh;
  float:bottom;
}

.top_menu {
  display: flex;  
  flex-direction: column;
  height: 7vh;
  width: 750rpx;
  background-color: #0066ff;
  z-index: 999;
  white-space: nowrap;
}

.top_menu scroll-view {
    width: 750rpx;
}

.top_menu .search_box {
    width: 598rpx;
    height: 4.5vh;
    text-align: center;
    margin: 0 0 10rpx 50rpx;
    border: 1rpx solid #ffffff;
    border-radius: 10rpx;
    display: flex;
    font-size: 32rpx;
    color: #ffffff;
}

.top_menu scroll-view view {
    font-size: 30rpx;
    line-height: 4vh;
    text-align: center;
    color: #fff;
    width: 100rpx;
    margin: 0 10rpx;
    display: inline-block;
    padding-bottom: 10rpx;
}

.top_menu .now {
    font-size: 34rpx;
    font-weight: bold;
    border-bottom: 5rpx solid #fff;
}


